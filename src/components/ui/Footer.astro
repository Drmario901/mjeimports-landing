---
import { Home, Users, Briefcase, HelpCircle, Mail } from '@lucide/astro';
const year = new Date().getFullYear();
---

<footer class="footer footer-center bg-[#001a40] text-white p-10">
  <div class="max-w-6xl mx-auto w-full flex flex-col items-center space-y-6 sm:space-y-8">
    
    <div class="mb-0 sm:mb-6">
      <img src="/logo.png" alt="Logo MJE Imports" class="h-16 w-auto filter invert brightness-0">
    </div>

    <div class="text-center">
      <h3 class="text-lg font-semibold mb-4">Acceso Rápido</h3>
      <nav class="flex flex-col sm:grid sm:grid-flow-col gap-2 sm:gap-4 items-center">
        <a href="#inicio" class="btn btn-ghost btn-sm flex items-center gap-1">
          <Home size={20} style="color: #2ad37a;" />
          <span>Inicio</span>
        </a>
        <a href="#quienes-somos" class="btn btn-ghost btn-sm flex items-center gap-1">
          <Users size={20} style="color: #2ad37a;" />
          <span>Quiénes Somos</span>
        </a>
        <a href="#servicios" class="btn btn-ghost btn-sm flex items-center gap-1">
          <Briefcase size={20} style="color: #2ad37a;" />
          <span>Servicios</span>
        </a>
        <a href="#como-funciona" class="btn btn-ghost btn-sm flex items-center gap-1">
          <HelpCircle size={20} style="color: #2ad37a;" />
          <span>Cómo Funciona</span>
        </a>
        <a href="#contacto" class="btn btn-ghost btn-sm flex items-center gap-1">
          <Mail size={20} style="color: #2ad37a;" />
          <span>Contacto</span>
        </a>
      </nav>
    </div>

    <div class="border-t border-white/30 pt-4 w-full text-center">
      <p class="text-sm opacity-75">&copy; {year} MJE Imports. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
